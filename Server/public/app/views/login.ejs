  <!-- Custom styles for this template -->
    <link href="../../css/signin.css" rel="stylesheet">

    <div class="container">

	    <div class="title">
	    	<h1 class="title">Movie Recommender System</h1>
	    </div>
	    <div class="row">
	        <div class="alert alert-danger" role="alert" ng-if="user_Message">
			  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
			  <span class="sr-only">Error:</span>
			  {{ user_Message }}
			</div>

	        <div class="col-sm-6">
	            <h1 class="text-center login-title">Login</h1>
	                <form class="form-signin">
		                <input type="text" class="form-control" ng-model="user_log.username" placeholder="Username" required autofocus>
		                <input type="password" class="form-control" ng-model="user_log.password" placeholder="Password" required>
		                <button class="btn btn-lg btn-grey btn-block" ng-click="login(user_log)" type="submit">
		                    Sign In</button>
	                </form>
	        </div>

	        <div class="col-sm-6">
	            <h1 class="text-center login-title">Register</h1>
	                <form class="form-signin">
		                <input type="text" class="form-control" ng-model="user_reg.username" placeholder="Username" required autofocus>
		                <input type="password" class="form-control" ng-model="user_reg.password" placeholder="Password" required>
		                <input type="password" class="form-control" ng-model="user_reg.cpassword" placeholder="Repeat Password" required>
		                <button class="btn btn-lg btn-grey btn-block" ng-click="register(user_reg)" type="submit">
		                    Sign Up</button>
	                </form>

	        </div>
	    </div>
    </div>

