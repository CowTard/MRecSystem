  <!-- Custom styles for this template -->
    <link href="../../css/signin.css" rel="stylesheet">

    <div class="container">

        <div class="alert alert-danger text-center" role="alert">{{ user_Message }}</div>
        <div class="card">
            <h1 class="title">Login</h1>
            <form>
                <div class="input-container">
                    <input ng-model="user_log.username" type="text" id="Username" required="required" />
                    <label for="Username">Username</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input ng-model="user_log.password" type="password" id="Password" required="required" />
                    <label for="Password">Password</label>
                    <div class="bar"></div>
                </div>
                <div class="button-container">
                    <button ng-click="login(user_log)"><span>Go</span></button>
                </div>
                <div class="footer"><a href="#">Forgot your password?</a></div>
            </form>
        </div>
        <div class="card alt">
            <div class="toggle"></div>
            <h1 class="title">Register
                <div class="close"></div>
            </h1>
            <form>
                <div class="input-container">
                    <input ng-model="user_reg.username" type="text" id="Username" required="required" />
                    <label for="Username">Username</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input ng-model="user_reg.password" type="password" id="Password" required="required" />
                    <label for="Password">Password</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input ng-model="user_reg.cpassword" type="password" id="Repeat Password" required="required" />
                    <label for="Repeat Password">Repeat Password</label>
                    <div class="bar"></div>
                </div>
                <div class="button-container">
                    <button ng-click="register(user_reg)"><span>Next</span></button>
                </div>
            </form>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>

    </div>
