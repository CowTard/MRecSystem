  <!-- Custom styles for this template -->
    <link href="../../css/signin.css" rel="stylesheet">

    <div class="container">
        <div class="alert alert-danger" role="alert" ng-if="user_Message">
		  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
		  <span class="sr-only">Error:</span>
		  {{ user_Message }}
		</div>

	    <div class="row">
	        <div class="col-sm-6 col-md-4 col-md-offset-4">
	            <h1 class="text-center login-title">Movie Recommender System</h1>
	                <form class="form-signin">
		                <input type="text" class="form-control" ng-model="user_log.username" placeholder="Username" required autofocus>
		                <input type="password" class="form-control" ng-model="user_log.password" placeholder="Password" required>
		                <button class="btn btn-lg btn-primary btn-block" ng-click="login(user_log)" type="submit">
		                    Sign in</button>
	                </form>
	            <a href="#" class="text-center new-account">Create an account </a>
	        </div>
	    </div>


        <div class="card alt">
            <div class="toggle"></div>
            <h1 class="title">Register
                <div class="close"></div>
            </h1>
            <form>
                <div class="input-container">
                    <input ng-model="user_reg.username" type="text" id="Username" required="required" />
                    <label for="Username">Username</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input ng-model="user_reg.password" type="password" id="Password" required="required" />
                    <label for="Password">Password</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input ng-model="user_reg.cpassword" type="password" id="Repeat Password" required="required" />
                    <label for="Repeat Password">Repeat Password</label>
                    <div class="bar"></div>
                </div>
                <div class="button-container">
                    <button ng-click="register(user_reg)"><span>Next</span></button>
                </div>
            </form>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>

    </div>
