<div class="container" ng-init="getMovies()">
    <div ng-repeat="movie in _moviesOnDatabase" ng-if="$index % 4 == 0" class="row">
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <a class="thumbnail" href="#">
                <img class="img-responsive" width="250" height="400" ng-src="{{movie.poster}}">
            </a>
            <h6 class="text-center">{{movie.title}}</h6>
        </div>
        <div class="col-lg-3 col-md-4 col-xs-6 thumb" ng-if="_moviesOnDatabase.length > ($index + 1)">
            <a class="thumbnail" href="#">
                <img class="img-responsive" width="250" height="400" ng-src="{{_moviesOnDatabase[$index+1].poster}}" >
            </a>
            <h6 class="text-center">{{_moviesOnDatabase[$index+1].title}}</h6>
        </div>
        <div class="col-lg-3 col-md-4 col-xs-6 thumb" ng-if="_moviesOnDatabase.length > ($index + 2)">
            <a class="thumbnail" href="#">
            <img class="img-responsive" width="250" height="400" ng-src="{{_moviesOnDatabase[$index+2].poster}}">
            </a>
            <h6 class="text-center">{{_moviesOnDatabase[$index+2].title}}</h6>
        </div>
        <div class="col-lg-3 col-md-4 col-xs-6 thumb" ng-if="_moviesOnDatabase.length > ($index + 3)">
            <a class="thumbnail" href="#">
            <img class="img-responsive" width="250" height="400" ng-src="{{_moviesOnDatabase[$index+3].poster}}">
            </a>
            <h6 class="text-center">{{_moviesOnDatabase[$index+3].title}}</h6>
        </div>
        <hr>
    </div>
</div>