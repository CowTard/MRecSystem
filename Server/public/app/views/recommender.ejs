<div ng-include="'app/views/shared/header.ejs'" data-ng-init="getReviewedMovies()"></div>

<div class="alert alert-danger" role="alert" ng-if="user_Message">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        {{ user_Message }}
</div>

<div class="container">
	<h3 class="text-center"> Recommended Movies</h3>
	<table class="table table-condensed">
	  <thead>
	  	<tr>
	  	<th>Title</th>
	  	<th>Actors</th>
	  	<th>Directors</th>
	  	<th>Genre</th>
	  	<th>Rated</th>
	  	<th>Year</th>
	  	<th>Imdb Rating</th>
	  	<th>Why it's recommended for you</th>
	  	</tr>
	  </thead>
	  <tbody>
	  	<tr ng-repeat="movie in movies">
	  		<td>{{movie.title}}</td>
	  		<td>{{movie.actors}}</td>
	  		<td>{{movie.directors}}</td>
	  		<td>{{movie.genre}}</td>
	  		<td>{{movie.rated}}</td>
	  		<td>{{movie.year}}</td>
	  		<td>{{movie.imdbrating}}</td>
	  	</tr>
	  </tbody>
	</table>
</div>

